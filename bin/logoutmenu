#!/bin/bash

options=("shutdown" "reboot" "logout")
bemenu_options=(-H 30 --fn "'Iosevka Nerd Font'" --hp=8 --tb='#000000' --tf='#bbbbbb' --fb='#000000' --ff='#bbbbbb' --nb='#000000' --nf='#bbbbbb' --hb='#bbbbbb' --hf='#000000' --ab='#000000' --af='#bbbbbb' -p "'>'")

selected_option=$(printf '%s\n' "${options[@]}" | bemenu "${bemenu_options[@]}" -p "Select an option:")

case $selected_option in
  "shutdown")
    poweroff
    ;;
  "reboot")
    reboot
    ;;
  "logout")
    pkill -KILL -u $USER
    ;;
  *)
    ;;
esac

